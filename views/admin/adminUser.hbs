  <body>

    <main id="main" class="main">

      <div class="pagetitle">
        <h1>User List</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item">Users</li>
            <li class="breadcrumb-item active">User List</li>
          </ol>
        </nav>
      </div><!-- End Page Title -->

      <section class=" mx-5 mt-5 bg-light rounded">
        <div class="row d-flex justify-content-center">
           <center><h3 class="mt-4" style="font-weight: 800 ;">User List</h3></center> 
          <div class="col-lg-10 py-4 bg-light rounded">
            <table class="table b" id="admintable">
              <thead style="text-align: center;">
                <tr  style="font-size:larger;">
                  <th scope="col">Index No</th>
                  <th scope="col">First Name </th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Mobile</th>
                  <th scope="col ">Status</th>
                </tr>
              </thead>
              <tbody class="pt-3" style="text-align: center;">
                {{#each users}}
                  <tr >
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.fname}}</td>
                    <td>{{this.lname}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phonenumber}}</td>
                    <td class="ps-5">
                    {{#if this.status}}
                    
                      
                      <div class="form-check form-switch ">
                      <input  class="form-check-input "  type="checkbox" id="customer_status{{this._id}}" onchange="change_status('{{this._id}}')"  >
                      <label class="form-check-label " style="color: #88b639 ;" for="flexSwitchCheckChecked" id="status1{{this._id}}">Active</label>
                      </div>
                    {{else}}
                      <div class="form-check form-switch">
                      <input  class="form-check-input" type="checkbox" id="customer_status{{this._id}}" onchange="change_status('{{this._id}}')" checked >
                      <label class="form-check-label " style="color: red " id="status1{{this._id}}">Blocked</label>
                      </div>
                    {{/if}}
            


                    </td>
                  </tr>
                {{/each}}

              </tbody>
            </table>

            <script>
              function change_status(customer_id)
              {
                let status;
                if(document.getElementById('customer_status'+customer_id).checked)
                {
                  console.log('checked')
                  status = 'Blocked';
                  document.getElementById('status1'+customer_id).style.color = 'red'
                }
                else{
                  console.log('unchecked')
                  status = 'Active'
                   document.getElementById('status1'+customer_id).style.color = '#88b639'
                }
                 document.getElementById('status1'+customer_id).innerHTML = status;
                $.ajax({
                  url:'/admin/change_status',
                  method:'post',
                  data:{status:status,'customer_id':customer_id},
                  success:function(response){
                    current_status = response['status']
                            
                  }
                })

              }
            </script>

          </div>

