  <script>
    function changeImg(event) {
      document.getElementById("showdiv").style.display = "block"; 
      document.getElementById('strImg').src = URL.createObjectURL(event.target.files[0])
      var name = "The Newly Uploaded Picture"
      document.getElementById('strImgLabel').innerHTML = name;
    }
  </script>
