  <main id="main" class="main">

    <div class="pagetitle">

      <h1><b>Products</b></h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Products</li>
          <li class="breadcrumb-item active">Edit Product</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section ">
      <div class="row d-flex  justify-content-center">
        <div class="col-lg-11 ">

          <div class="card">
            <div class="card-body ">
              <div class="row ">
                <center>
                  <h5 class="card-title " style="">Edit Product</h5>
                </center>
              </div>

              <!-- General Form Elements -->
              <form class="mt-5" action="/admin/product/edit/{{product._id}}" method="post"
                >
                <div class="row mb-3 d-flex justify-content-around px-3">

                  <div class="col-md-6 ps-5">
                    <div class="row mb-3">
                      <label for="inputText" class="col-sm-7 col-form-label">Product Name</label>
                      <div class="col-sm-11 ">
                        <input type="text" name="Name" value="{{product.Name}}" class="form-control" />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="inputPassword" class="col-sm-7 col-form-label">Short Description</label>
                      <div class="col-sm-11">
                        <input type="text" value="{{product.ShortDes}}" name="ShortDes" class="form-control" />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="inputPassword" class="col-sm-7 col-form-label">Description</label>
                      <div class="col-sm-11">
                        <textarea class="form-control" name="Des" style="height: 120px">{{product.Des}}</textarea>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="inputNumber" class="col-sm-7 col-form-label">Quantity</label>
                      <div class="col-sm-11">
                        <input type="number" name="Qty" value="{{product.Qty}}" class="form-control" />
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputNumber" class="col-sm-7 col-form-label">Original Price</label>
                      <div class="col-sm-11">
                        <input type="number" name="PriceOg" value="{{product.PriceOg}}" class="form-control" required />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="inputNumber" class="col-sm-7 col-form-label">Price</label>
                      <div class="col-sm-11">
                        <input type="number" name="Price" value="{{product.Price}}" class="form-control" required />
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="inputColor" class="col-sm-7 col-form-label">Color Picker</label>
                      <div class="col-sm-11">
                        <input type="color" class="form-control form-control-color" value="{{product.color}}"
                          id="exampleColorInput" name="color" title="Choose your color" />
                      </div>
                    </div>

                    {{!-- <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">Multi Select</label>
                      <div class="col-sm-11">
                        <select class="form-select" multiple aria-label="multiple select example">
                          <option selected>Open this to select Category</option>
                          <option value="1">One</option>
                          <option value="2">Two</option>
                          <option value="3">Three</option>
                        </select>
                      </div>
                    </div> --}}

                  </div>

                  <div class="col-md-6 ">

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">Selected the category of the product</label>
                      <div class="col-sm-11">
                        <select class="form-select" name="Category" disaria-label="Default select example">
                          <option value="{{product.Category._id}}" selected>{{product.Category.category}}</option>
                          {{#each categories}}
                          <option value="{{this._id}}">{{this.category}}</option>
                          {{/each}}
                        </select>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">Selected Brand of the Product</label>
                      <div class="col-sm-11">

                        <div class="form-floating mb-3">
                          <select class="form-select" id="floatingSelect" name="Brand" aria-label="Floating label select example">
                            <option value="{{product.Brand._id}}" selected>Select {{product.Brand.brand}}</option>
                          {{#each brands}}
                          <option value="{{this._id}}">{{this.brand}}</option>
                          {{/each}}
                          </select>
                          <label for="floatingSelect">Company / Brand</label>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label for="inputNumber" class="col-sm-7 col-form-label">File Upload</label>
                      <div class="col-sm-11">
                        <input class="form-control" onchange="changeImg(event)" type="file" name="Img" id="formFile"
                          multiple />
                      </div>
                    </div>

                    <div class="row mb-3" id="showdiv">
                      <label for="inputText" id="strImgLabel" class="col-sm-7 col-form-label">The Stored Emblem</label>
                      <div class="col-sm-11 ">
                        <img style="width: 400px;" id="strImg" src="/product-images/{{product._id}}.png">
                      </div>
                    </div>



