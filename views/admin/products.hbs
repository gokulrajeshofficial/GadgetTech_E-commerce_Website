<body>

  <main id="main" class="main">

    <div class="pagetitle">

      <h1><b>Product</b></h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Home</a></li>
          <li class="breadcrumb-item">Products</li>
          <li class="breadcrumb-item active">Product List</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section mt-5">
      <div class="row d-flex justify-content-center">
        <div class="col-lg-12 ">

          <div class="card px-5 ">
            <div class="card-body">
              <center>
                <h5 class="card-title" style="font-size:1.5rem ; ">Product List</h5>
              </center>

              <table id="productTable" class="table mt-3 table-hover  rounded-2" style="text-align: center;">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Images</th>
                    <th scope="col">Options</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each products}}
                  <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Qty}}</td>
                    <td>{{this.Price}}</td>
              
                    <td>{{this.Category.category}}</td>
                    <td>{{this.Brand.brand}}</td>
                    <td><img style="width: 80px; height : 55px" src="/images/product/{{this.img.[0]}}"></td>
  
                    <td>
                      <a href="/admin/product/edit/{{this._id}}">
                      <span class="material-symbols-outlined text-success"style="font-size: 2rem ;">edit_square</span>
                      </a>

                      <a href="/admin/product/delete/{{this._id}}">
                      <span class="material-symbols-outlined text-danger " style="font-size: 2rem ">delete</span>
                      </a>
                      <a href="">
                      <i class="bi bi-eye text-dark" style="font-size: 2rem "></i>
                      </a>
                      
                    </td>
                  </tr>
                  {{/each}}

                </tbody>
              </table>





            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->




