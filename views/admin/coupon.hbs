<body>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Coupon Management</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item">Coupon</li>
                    <li class="breadcrumb-item active">Coupon Management</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="card p-2 m-5 mt-5  rounded">
            <div class="row d-flex justify-content-center">
                <center>
                    <h3 class="mt-3" style="font-weight: 800 ;">Coupon Management</h3>
                </center>
                <div class="col-3 mt-2 ms-auto">
                    <a href="/admin/coupons/add"> <button class="btn btn-outline-primary float-right ">Add
                            Coupon</button></a>
                </div>

                <div class="col-lg-10 py-5  rounded">
                    <table class="table table-hover" id="admintable">
                        <thead>
                            <tr style="font-size:larger; text-align: center;">
                                <th scope="col">Index No</th>
                                <th scope="col">Coupon Code</th>
                                <th scope="col">Offer(%)</th>
                                <th scope="col">Expiry Date</th>
                                <th scope="col">Status</th>

                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody class="pt-3">
                            {{#each coupons}}
                            <tr style=" text-align: center;">

                                <th scope="row">{{inc @index}}</th>
                                <td>{{this.couponName}}</td>
                                <td>{{this.couponPer}}% <br><span>Upto â‚¹ {{this.couponLimit}}</span></td>

                                <td>{{this.couponDate}} </td>
                                {{#if (checkDate this.couponDate)}}
                                <td class="text-success">Active</td>
                                {{else}}
                                <td class="text-danger">Expired</td>
                                {{/if}}
                                <td>

                                    <a onclick="deleteCoupon('{{this._id}}')"><button class="btn btn-outline-danger"
                                            style="width: 7em;">Delete</button></a>

                                    <button data-bs-toggle="modal" data-bs-target="#verticalycentered"
                                        class="btn btn-outline-success" style="width: 7em;">Edit</button>


                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>

                </div>

            </div>
        </section>

    </main>
