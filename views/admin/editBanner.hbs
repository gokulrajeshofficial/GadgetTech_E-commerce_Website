<body>

    <main id="main" class="main">

        <div class="pagetitle">

            <h1><b>Banner</b></h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item">Banner Management</li>
                    <li class="breadcrumb-item active">Edit Banner</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section mt-5">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-9">

                    <div class="card">
                        <div class="card-body">

                            <center>
                                <h5 class="card-title" style="font-size:1.5rem ;">Edit Banner</h5>
                            </center>


                            <!-- General Form Elements -->
                            <form class="mt-5" action="/admin/editBanner/{{banner._id}}" method="POST" enctype="multipart/form-data">
                                <div class="row mb-3 d-flex justify-content-around px-3">

                                    <div class="col-md-8 ">
                                        {{!-- <center>
                                            <p class="text-danger" style="font-size:1.0rem ;">{{err_message}}</p>
                                        </center> --}}


                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-7 col-form-label">Subtitle</label>
                                            <div class="col-sm-11 ">
                                                <input type="text" name="subTitle" value="{{banner.subTitle}}" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-7 col-form-label">Title 1st
                                                Line</label>
                                            <div class="col-sm-11 ">
                                                <input type="text" name="title1" value="{{banner.title1}}" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-7 col-form-label">Title 2nd
                                                Line</label>
                                            <div class="col-sm-11 ">
                                                <input type="text" name="title2" value="{{banner.title2}}" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label for="inputText" class="col-sm-7 col-form-label">Price</label>
                                            <div class="col-sm-11 ">
                                                <input type="number" name="price" value="{{banner.price}}" class="form-control" />
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="" class="col-sm-7 col-form-label">Banner Image</label>
                                            <div class="col-sm-11">
                                                <input class="form-control" onchange="ChangeFile(event)" type="file"
                                                    name="bannerImg" id="formFile" />
                                            </div>
                                        </div>

                                        <div class="row mb-1" id="showDiv" >
                                            <label for="" id="strimg" class="col-sm-7 col-form-label">Stored Image</label>
                                            <div class="col-sm-11">
                                                <img id="strImg" src="/banner-images/{{banner._id}}.png" alt="" class="w-100 ">
                                            </div>
                                        </div>


                                    </div>

                                    {{!-- 2nd column end --}}
                                </div>

                                <center>
                                    <div class="row mb-3">

                                        <div class="col-sm-11">
                                            <button type="submit" class="btn btn-lg btn-primary">Update the Banner</button>
                                        </div>
                                    </div>
                                </center>

                            </form><!-- End General Form Elements -->

                        </div>
                    </div>

                </div>
            </div>
