<body>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Banner</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item">Banner</li>
                    <li class="breadcrumb-item active">Banner Mangement</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class=" m-5 mt-5 bg-light rounded">
            <div class="row d-flex justify-content-center">
                <center>
                    <h3 class="mt-3" style="font-weight: 800 ;">Banner List</h3>
                </center>
                <div class="col-lg-9 py-5 bg-light rounded">

                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">

                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>

                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        </div>

                        <div class="carousel-inner">
                            {{#each banners}}

                            <div class="carousel-item active">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-12">
                                        <img src="/banner-images/{{this._id}}.png" class="d-block w-100" alt="...">
                                    </div>

                                    <div>
                                        <div class="row mt-2 bg-dark d-flex justify-content-center align-items-center mb-3">
                                            <div class="col-8  rounded-3 ">
                                                <div style="text-align: center ; color: white;">
                                                    <h4 class="mb-3">Slide No :{{inc @index}}</h>
                                                        <h5>Sub Title : {{this.subTitle}} </h5>
                                                        <h5>Title : {{this.title1}} <span>{{this.title2}}</span></h5>
                                                        <h5>Price : {{this.price}} </h5>
                                                </div>

                                            </div>
                                            <div class="col-4 rounded-3 d-flex  align-items-center">
                                                <div class="row">
                                                <a href="/admin/editBanner/{{this._id}}" class="btn btn-outline-success mb-2">Edit </a>
                    
                                                <a href="/admin/deleteBanner/{{this._id}}" onclick="return confirm('You are about to delete {{this.brand}} Banner ?')"
                                                    class="btn btn-outline-danger">Delete</a>
                                               
                                               
                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}

                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>



                </div>

            </div>
        </section>

    </main>
