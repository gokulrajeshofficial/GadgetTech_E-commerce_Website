                        </li>
                    </ul>
                    <div class="tab-content pt-2" id="myTabjustifiedContent">
                        <div class="tab-pane fade show active" id="main-justified" role="tabpanel"
                            aria-labelledby="home-tab">

                            {{#each banners.main}}

                            <section class=" mt-3 mb-3">
                                <div class="row d-flex justify-content-center" style="background-color:black ;">
                                    <div class="col-12  px-0">
                                        <img src="/images/banner/{{this.img.[0]}}" alt="..." style="width: 100%;">
                                    </div>


                                    {{!-- <div class="row  d-flex justify-content-center align-items-center mb-3 "
                                        style="background-color: black;"> --}}
                                        <div class="col-8 m">
                                            <div style="text-align: center ; color: white;">
                                                <h4 class="mb-3" style="color: #a0c069;">Slide No :{{inc @index}}</h>
                                                    <h5>Sub Title : {{this.subTitle}} </h5>
                                                    <h5>Title : {{this.title1}} <span>{{this.title2}}</span>
                                                    </h5>
                                                    <h5>Price : {{this.price}} </h5>
                                            </div>

                                        </div>
                                        <div class="col-4 rounded-3 d-flex  align-items-center">
                                            <div class="row">
                                                <a href="/admin/editBanner/{{this._id}}"
                                                    class="btn btn-outline-success mb-2">Edit </a>

                                                <a href="/admin/deleteBanner/{{this._id}}"
                                                    onclick="return confirm('You are about to delete {{this.brand}} Banner ?')"
                                                    class="btn btn-outline-danger">Delete</a>
                                            </div>
                                        </div>
                                        {{!--
                                    </div> --}}

                                </div>
                            </section>
                            {{/each}}

                        </div>
                        <div class="tab-pane fade" id="middle-large-justified" role="tabpanel" aria-labelledby="profile-tab">
