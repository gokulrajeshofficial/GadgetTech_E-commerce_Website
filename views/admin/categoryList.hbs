     <script>
    function deleteCategory(proId , catName) {
      Swal.fire({
        title: 'Are you sure?',
        text: "You are about to delete "+catName+" !",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
      }).then((result) => {
        if (result.isConfirmed) {
          $.ajax({
            url: '/admin/deleteCategory/' + proId,
            type: 'DELETE',
            success: (response) => {
              Swal.fire(
                'Deleted!',
                'Category has been deleted.',
                'success'
              ).then(()=>{
                location.reload()
              })
            }
          })
        }
      })

    }
  </script>

