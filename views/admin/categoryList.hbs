<body>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Category List</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item">Category</li>
                    <li class="breadcrumb-item active">Category List</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class=" m-5 mt-5 bg-light rounded">
            <div class="row d-flex justify-content-center">
                <center><h3 class="mt-3" style="font-weight: 800 ;">Category List</h3></center> 
                <div class="col-lg-9 py-5 bg-light rounded">
                    <table class="table b" id="admintable">
                        <thead>
                            <tr style="font-size:larger; text-align: center;">
                                <th scope="col">Index No</th>
                                <th scope="col">Categories </th>
                                <th scope="col">Category Images</th>
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody class="pt-3">
                            {{#each categories}}
                            <tr style=" text-align: center;">
                                <th scope="row">{{inc @index}}</th>
                                <td>{{this.category}}</td>
                                <td><img style="width: 60px; height : 50px" src="/images/category/{{this.img.[0]}}"></td>
                                <td>
                                    <a href="/admin/editCategory/{{this._id}}" class="btn btn-primary">Edit</a>
                                    <a style="cursor: pointer;" onclick="deleteCategory('{{this._id}}','{{this.category}}')"
                                        class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>



                </div>

            </div>
        </section>

    </main>
