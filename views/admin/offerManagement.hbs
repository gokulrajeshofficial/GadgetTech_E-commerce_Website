    <div class="modal fade" id="offer-modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h5 class="modal-title text-white">Offer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body  " style="background-color: aliceblue;">
                    <div class="row " style="margin: auto">
                        <form id="offerForm">
                            <div class="col-12 px-3 pt-2">

                                <div class="row mb-3">
                                    <label for="offerId" class="mb-3">Enter the Offer Percentage(%) </label>
                                    <input type="number" class="ms-2" id="offerId" name="offerProduct">
                                </div>


                            </div>
                            <div class="col-12 ms-3 py-2">
                                <button type="submit" class="btn btn-outline-primary ">Add Offer</button>
                            </div>


                        </form>
                    </div>

                </div>
               
            </div>
        </div>
    </div><!-- End Vertically centered Modal-->

