<body>

    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Offer Management</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                    <li class="breadcrumb-item">Product Management</li>
                    <li class="breadcrumb-item active">Offer Management</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="card p-2 m-5 mt-5  rounded">
            <div class="row d-flex justify-content-center">
                <center>
                    <h3 class="mt-3" style="font-weight: 800 ;">Offer Management</h3>
                </center>
                <div class="col-lg-12 py-5  rounded">
                    <table class="table table-hover" id="offerTable">
                        <thead>
                            <tr style="font-size:larger; text-align: center;">
                                <th scope="col">Index No</th>
                                <th scope="col">Products Images</th>
                                <th scope="col">Product details</th>
                                <th scope="col">Product Price</th>
                                <th scope="col">Offer(%)</th>
                                <th scope="col">Options</th>
                            </tr>
                        </thead>
                        <tbody class="pt-3">
                            {{#each products}}
                            <tr style=" text-align: center;">
                                <th scope="row">{{inc @index}}</th>
                                <td><img style="width: 50px; height : 50 px" src="/images/product/{{this.img.[0]}}">
                                </td>
                                <td>{{this.Name}}</td>
                                <td>{{this.Price}}</td>
                                {{#if this.offer}}
                                <td>{{this.offer}} %</td>
                                {{else}}
                                <td>0 %</td>
                                {{/if}}
                                <td>
                                    {{#if this.offer}}
                                    <a onclick="deleteOffer('{{this._id}}','{{this.oldPrice}}')"><button class="btn btn-danger" style="width: 7em;">Delete</button></a>
                                    {{else}}
                                    <a onclick="addOffer('{{this._id}}','{{this.Price}}')"><button class="btn btn-success" style="width: 7em;">Add Offer</button></a>
                                    {{/if}}
                                    
                                </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>

                </div>

            </div>
        </section>

    </main>
