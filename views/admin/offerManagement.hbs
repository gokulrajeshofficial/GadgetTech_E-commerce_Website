    <script>

     function addOffer(proId , proPrice) {
            console.log('clicked')
            console.log
            $('#offer-modal').modal('show')
           $('#offerForm').submit((e) => {
                e.preventDefault();
                console.log("reached")
                let offer = document.getElementById('offerId').value
                $.ajax({
                    url: '/admin/product/addOffer',
                    method: 'post',
                    data: {offer , proId , proPrice},
                    success: (response) => {
                        $('#offer-modal').modal('hide')
                        location.reload()
                    }
                })
            })
        }

        function deleteOffer( proId , oldPrice)
        {
            let offer = document.getElementById('offerId').value
                $.ajax({
                    url: '/admin/product/deleteOffer',
                    type: 'DELETE',
                    data: { proId , oldPrice},
                    success: (response) => {
                      console.log(response)
                        location.reload()
                    }
                })
        }
    </script>

