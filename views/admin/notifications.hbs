    <script>
        function approveReturn(orderId , proId , msg , userId)
        {
            $.ajax({
                url : '/admin/returnApproved',
                type : 'PATCH',
                data : {orderId , proId , msg , userId},
                success : (response)=>{
                   
                    console.log(response)
                    document.getElementById('btn'+orderId).innerText = "Return Approved"
                 
                     document.getElementById('btn'+orderId).disabled = true
                    
                }
            })
        }
    </script>